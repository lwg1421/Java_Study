package day7.backtracking;

import java.util.Arrays;

public class SumNumbers {

	static int N = 100, M = 5, target = 150;
	static int[] arr = new int[N];		//1~N
	static int[] select = new int[M];	//선택한 숫자

	public static void main(String[] args) {
		for (int i = 0; i < N; i++) {
			arr[i] = i+1;
		}
		
		backtracking(0,0);
	}

	private static void backtracking(int cnt, int startIndex) {	//cnt번째 숫자 뽑기
		if (cnt == M) {
			int total = 0;
			for (int x : select) total += x;
			if (total == target) System.out.println(Arrays.toString(select));
			return;
		}
		for (int i = startIndex; i < N; i++) {
			select[cnt] = arr[i];
			backtracking(cnt+1,i+1);
			
		}
	}
}
