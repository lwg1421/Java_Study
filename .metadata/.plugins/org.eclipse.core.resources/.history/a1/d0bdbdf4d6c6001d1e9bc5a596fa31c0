import java.util.Scanner;

public class BOJ10986 {
	static int N,M;
	static int[] arr;
	static int[] sumArr;
 	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		N = sc.nextInt();
		M = sc.nextInt();
		
		arr = new int[N];	//배열에 N개의 수가 담김
		sumArr = new int[N+1];	//0에는 0이 담기므로 사이즈가 1 더 큼
		
		for(int i = 0; i < N; i++) {	//배열에 값 담기
			arr[i] = sc.nextInt(); 
		}
		
		for(int i = 1; i <= N; i++) {	//합배열에 값 담기
			sumArr[i] = sumArr[i-1]+arr[i-1];
		}
		
		int count = 0;
		for (int i = 1; i <= N; i++) {
			for (int k = i; k <= N; k++) {
				if((sumArr[i]-sumArr[k-1])%M == 0) count++;
			}
		}
		
		System.out.println(count);
		
		
		
	}

}
